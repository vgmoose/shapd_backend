<% end %>
    
<% if @shape != nil %>
var savedShape = "<%= @shape[:shape] %>";
var shapeID = "<%= @shape[:id] %>";

<% end %>

<% if defined? @view %>
    var viewer = true;
    shapeID = -1;
<% end %>

var authToken = "<%= form_authenticity_token %>";
<%
if (params[:meta] == "1") %>
