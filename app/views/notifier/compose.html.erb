}

function submitPreview()
{
    $.post("/sendtest", {title: document.getElementById("t1").value, header: document.getElementById("t2").value, message: document.getElementById("t3").value});
}

function submitReal()
{
    if (confirmPost())
        $.post("/sendall", {title: document.getElementById("t1").value, header: document.getElementById("t2").value, message: document.getElementById("t3").value});
}

function insertatcursor(myField, myValue) { 
var ae = document.activeElement;
   //IE support
    if (document.selection) {
        myField.focus();
        sel = document.selection.createRange();
        sel.text = myValue;
    }
    //MOZILLA and others
    else if (myField.selectionStart || myField.selectionStart == '0') {
        var startPos = myField.selectionStart;
        var endPos = myField.selectionEnd;
        myField.value = myField.value.substring(0, startPos)
            + myValue
            + myField.value.substring(endPos, myField.value.length);
    } else {
        myField.value += myValue;
    }
      setTimeout(function() { ae.focus() }, 1);

} 
  </script>
            

