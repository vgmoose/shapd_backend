<h1>Listing splashes</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @splashes.each do |splash| %>
      <tr>
        <td><%= splash.email %></td>
        <td><%= link_to 'Show', splash %></td>
        <td><%= link_to 'Edit', edit_splash_path(splash) %></td>
        <td><%= link_to 'Destroy', splash, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

